<SafeAreaView>
                {user ? (
// Komponente koje se prikazuju ako je korisnik prijavljen
                    <>
                        <Text>Dobrodošli, {user.firstName} {user.lastName}!</Text>
                        <Button title="Odjava" onPress={() => setUser(null)}/>
                        <TextInput placeholder="Pretražite muzeje po nazivu ili gradu" value={searchTerm}
                                   onChangeText={setSearchTerm}/>
                        <Button title="Pretraži" onPress={handleSearch}/>

                        <RegistrationComponent/>
                        <NewsFeedComponent/>

                        {/*<VirtualTours />*/}
                        <Button title="Prikaži vijesti" onPress={handleShowNews}/>
                        <FlatList
                            data={news}
                            renderItem={({item}) => (
                                <View>
                                    <Text>{item.title}</Text>
                                    <Text>{item.description}</Text>
                                </View>
                            )}
                            keyExtractor={item => item.link}
                        />
                        <FlatList
                            data={weather}
                            renderItem={({item}) => (
                                <View>
                                    <Text>{item.city}</Text>
                                    <Text>{item.weather}</Text>
                                </View>
                            )}
                            keyExtractor={item => item.city}
                        />
                    </>
                ) : (
// Komponente koje se prikazuju ako korisnik nije prijavljen
                    <>
                        <Button title="Registracija" onPress={() => setRegistrationModalVisible(true)}/>
                    </>
                )}
                <Modal visible={isRegistrationModalVisible} animationType="slide">

                </Modal>
            </SafeAreaView>